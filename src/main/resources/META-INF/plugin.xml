<idea-plugin>
    <id>com.github.btnewton.intellijdevplugin</id>
    <name>intellij-dev-plugin</name>
    <vendor>btnewton</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.btnewton.intellijdevplugin.services.WorkSessionService"/>
        <applicationService serviceImplementation="com.github.btnewton.intellijdevplugin.services.AppSettingsState"/>
        <applicationConfigurable parentId="tools" instance="com.github.btnewton.intellijdevplugin.services.AppSettingsConfigurable"
                                 id="com.github.btnewton.intellijdevplugin.services.AppSettingsConfigurable"
                                 displayName="Work Session"/>
    </extensions>

    <actions>
        <action id="btnewton-dev-action" class="com.github.btnewton.intellijdevplugin.services.ResetWorkSessionAction" text="Work Session Restart"
                description="Restart your work session">
        </action>
    </actions>

    <applicationListeners>
        <listener class="com.github.btnewton.intellijdevplugin.services.GenericIntelliJListener"
                  topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>
    </applicationListeners>

    <projectListeners>
        <listener class="com.github.btnewton.intellijdevplugin.services.GenericIntelliJListener" topic="com.intellij.openapi.project.ProjectManagerListener"/>
        <listener class="com.github.btnewton.intellijdevplugin.services.GenericIntelliJListener" topic="com.intellij.openapi.command.CommandListener"/>
        <listener class="com.github.btnewton.intellijdevplugin.services.GenericIntelliJListener" topic="com.intellij.execution.RunManagerListener"/>
        <listener class="com.github.btnewton.intellijdevplugin.services.GenericIntelliJListener" topic="com.intellij.codeInsight.completion.CompletionPhaseListener"/>
        <listener class="com.github.btnewton.intellijdevplugin.services.GenericIntelliJListener" topic="com.intellij.openapi.vcs.update.UpdatedFilesListener"/>
        <listener class="com.github.btnewton.intellijdevplugin.services.GenericIntelliJListener" topic="com.intellij.problems.ProblemListener"/>
        <listener class="com.github.btnewton.intellijdevplugin.services.GenericIntelliJListener" topic="com.intellij.xdebugger.XDebuggerManagerListener"/>
        <listener class="com.github.btnewton.intellijdevplugin.services.GenericIntelliJListener" topic="com.intellij.task.ProjectTaskListener"/>
        <listener class="com.github.btnewton.intellijdevplugin.services.GenericIntelliJListener" topic="com.intellij.openapi.vcs.changes.committed.VcsConfigurationChangeListener"/>
    </projectListeners>
</idea-plugin>
